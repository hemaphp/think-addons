{
    "name": "hemaphp/think-addons",
    "description": "The ThinkPHP6 Addons Package",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "hemaphp",
            "email": "hemaphp@qq.com"
        }
    ],
    "require": {
        "hemaphp/think-addons": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "think\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "think\\addons\\Service"
            ],
            "config":{
                "addons": "src/config.php"
            }
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "php think addons:config"
        ]
    }
}
